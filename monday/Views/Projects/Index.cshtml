@model IEnumerable<mondayWebApp.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container mt-5">
    <h1>Projects</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Project</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Project Name
                </th>
                <th>
                    Project Manager
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectManager.EmployeeNameSurname)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.ProjectID" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ProjectID" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ProjectID" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
