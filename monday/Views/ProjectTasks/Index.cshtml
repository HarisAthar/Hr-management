@model IEnumerable<mondayWebApp.Models.ProjectTask>

<div class="container mt-5">
    <h1>Tasks</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Add New Task</a>
    </p>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Task Name</th>
                    <th>Task Deadline</th>
                    <th>Project</th>
                    <th>Employee</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TaskName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TaskDeadline)</td>
                        <td>@Html.DisplayFor(modelItem => item.Project.ProjectName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Employee.EmployeeNameSurname)</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.TaskID">Edit</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.TaskID">Details</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.TaskID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
