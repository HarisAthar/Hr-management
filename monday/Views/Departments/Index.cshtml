@model mondayWebApp.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <h1>Create Department</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label">Department Name</label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentDesc" class="control-label">Department Description</label>
                    <input asp-for="DepartmentDesc" class="form-control" />
                    <span asp-validation-for="DepartmentDesc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentEstablishmentDate" class="control-label">Establishment Date</label>
                    <input asp-for="DepartmentEstablishmentDate" class="form-control" />
                    <span asp-validation-for="DepartmentEstablishmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentManagerID" class="control-label">Department Manager</label>
                    <select asp-for="DepartmentManagerID" class="form-control" asp-items="ViewBag.DepartmentManagerID"></select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Department</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Departments List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
